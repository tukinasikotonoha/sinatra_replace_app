<div class="user_profile mt-5 mb-5">
  <div class="icon text-center">
    <%= image_tag @user.image_url(:thumb) %>
  </div>
  <div class="name text-center">
    <h1><%= @user.nickname %></h1>
  </div>
  <div class="text-center">
    <button type="button" class="btn btn-secondary">
      <%= link_to "プロフィールを編集する", "/users/edit" %>
    </button>

    <button type="button" class="btn btn-secondary">
    <%= link_to "削除する", "/users", method: :delete %>
    </button>

  </div>
</div>

<!-- 投稿一覧 -->
<div class="text-center mt-5 mb-5">
  <h2><%= @user.nickname %>の投稿一覧</h2>
</div>
<div class="row show_images text-center">
  <% @posts.each do |post| %>
    <div class="col-xl-4 col-md-6 col-sm-12 mb-5">
       <h3><%= post.title %></h3>
      <a href='/show/<%= post['id'] %>/<%= @user_id %>'><img src="/images/post/<%= post['product_image'] %>"></a>
      <p><a href='/'>一覧に戻る</a> | <a href='/edit/<%= post['id'] %>/<%= @user_id %>'>編集</a> | <a href='/destroy_check/<%= post['id'] %>/<%= @user_id %>'>削除</a></p>
    </div>
  <% end %>
</div>